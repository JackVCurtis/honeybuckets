<% if @search %>
  <h2>Honeybuckets near <span id="search"><%= @search %></span></h2>
<% end %>


<div id="map" class="home-map"></div>
	<input TYPE="image" SRC="/assets/honeycomb2.png" ALT="img"></INPUT>
	<div class="slider">
		<% @honey_embed = [] %>
		<% honey = twitter_client.search("#honeybuckets").take(3)%>
